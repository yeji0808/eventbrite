.form-group
  label(for="title") * Event Title
  input.form-control(type="text", name="title", placeholder="What's your event?", value=event.title)
.form-group
  label(for="place") * Place
  input.form-control(type="text", name="place", placeholder="Where?", value=event.place)
.form-group
  label(for="start") * Start Time
  input.form-control(type="text", name="start", placeholder="When start?", value=event.start)
.form-group
  label(for="end") * End Time
  input.form-control(type="text", name="end", placeholder="When end?", value=event.end)
.form-group
  label(for="content") * Event
  textarea.form-control(name="content", rows="5", placeholder="Explain your event.")= event.content
.form-group
  label(for="group_name") * Group Name
  input.form-control(type="text", name="group_name", placeholder="What's your group name?", value=event.group_name)
.form-group
  label(for="group_explain") * Group Explain
  textarea.form-control(name="group_explain", rows="3", placeholder="Explain your group.")= event.group_explain
